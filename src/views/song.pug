div(id="song-section" class="container-fluid")
    div(class="col-md-8" data-bind="visible: song")
        h2
            span(data-bind="text: songViewModel.songTitle")
            small(data-bind="text: songViewModel.songSubTitle")
        label(for="key-select" data-bind="visible: !songViewModel.viewMode()") Key: 
        select(id="key-select" data-bind="value: songViewModel.currentKey, options: songViewModel.keyOptions, optionsValue: 'key', optionsText: 'key', visible: !songViewModel.viewMode()")
        
        span(data-bind="visible: songViewModel.viewMode") Key: 
        span(data-bind="text: songViewModel.originalKey, visible: songViewModel.viewMode")
        
        label(for="capo-select") Capo: 
        select(id="capo-select" data-bind="value: songViewModel.capoKey, options: songViewModel.capoOptions, optionsValue: 'key', optionsText: function (capo) { return 'Capo ' + capo.capo() + ' - ' + capo.key }")
                
        div(id="song" data-bind="foreach: songViewModel.formattedSong")
            div(class="song-section" data-bind="foreach: data, css: { 'song-chorus': type === 'chorus' }")
                div(class="song-line" data-bind="foreach: $data")
                    span(data-bind="text: data, css: type, attr: { 'data-chord': type() === 'chord' ? data : '' }")
